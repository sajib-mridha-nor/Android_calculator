<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    android:padding="5dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv1"
        android:cursorVisible="true"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="150dp"
        android:text=""
        android:textSize="30dp"
        android:gravity="bottom|right"
        android:layout_marginRight="10dp"

        android:layout_marginBottom="10dp" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:weightSum="4"

        android:orientation="horizontal">

        <Button

            android:layout_marginEnd="10dp"
            android:text="clear"
            android:onClick="clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#641E16"
            android:textColor="#fff"
            android:layout_weight="2"
            android:textSize="30dp"

            />
        <Button
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#641E16"
            android:textColor="#fff"
            android:textSize="30dp"
            android:layout_weight="2"
            android:text="back"
            android:onClick="back"

            />

    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_marginEnd="5dp"
            android:text="1"
            android:onClick="numone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#17202a"
            android:textColor="#fff"
            android:layout_weight="1"
            android:textSize="20dp"

            />
        <Button
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#17202a"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="2"
            android:onClick="numtwo"

            />

        <Button
            android:layout_marginEnd="5dp"
            android:text="3"
            android:onClick="numtree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#17202a"
            android:textColor="#fff"
            android:layout_weight="1"
            android:textSize="20dp"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#641E16"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="+"
            android:onClick="numplus"

            />


    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_marginEnd="5dp"
            android:text="4"
            android:onClick="numfour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#17202a"
            android:textColor="#fff"
            android:layout_weight="1"
            android:textSize="20dp"

            />
        <Button
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#17202a"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="5"
            android:onClick="numfive"

            />

        <Button
            android:layout_marginEnd="5dp"
            android:text="6"
            android:onClick="numsix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#17202a"
            android:textColor="#fff"
            android:layout_weight="1"
            android:textSize="20dp"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#641E16"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="-"
            android:onClick="numMinus"

            />


    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_marginEnd="5dp"
            android:text="7"
            android:onClick="numseven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#17202a"
            android:textColor="#fff"
            android:layout_weight="1"
            android:textSize="20dp"

            />
        <Button
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#17202a"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="8"
            android:onClick="numeight"

            />

        <Button
            android:layout_marginEnd="5dp"
            android:text="9"
            android:onClick="numnine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#17202a"
            android:textColor="#fff"
            android:layout_weight="1"
            android:textSize="20dp"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#641E16"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="*"
            android:onClick="numMultiply"

            />


    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1
"
        android:weightSum="4"
        android:orientation="horizontal">

        <Button
            android:layout_marginEnd="5dp"
            android:text="0"
            android:onClick="numzero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#17202a"
            android:textColor="#fff"
            android:layout_weight="2"
            android:textSize="20dp"

            />
        <Button
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#17202a"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_weight="2"
            android:text="="
            android:onClick="numequal"


            />
        <Button
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#641E16"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_weight="2"
            android:text="/"

            android:onClick="numdivided"

            />



    </LinearLayout>





</LinearLayout>